<div class="link-block">
    {{#each items}}
    <div class="link-block__item">
        <div class="link-block__image" style="background-image: url('/images/{{image}}')"></div>
        <div class="link-block__content">
            <p class="link-block__text">{{text}}</p>
            <a href="#" class="btn btn--inline btn--teal btn--hollow icon-link icon-link--arrow icon-link--after">{{cta}}</a>
        </div>
    </div>
    {{/each}}
</div>
